# Compiler
CC := gcc
CFLAGS := -Wall -Werror -Wextra -pedantic

# Executable name
NAME := school

# Source files
SRC := main.c file1.c file2.c

# Object files
OBJ := $(SRC:.c=.o)

# Cleaning program
RM := rm -f

# Rules
all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $(OBJ)

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all

.PHONY: all clean oclean fclean re

